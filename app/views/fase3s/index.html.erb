<p id="notice"><%= notice %></p>

<h1>Terceira fase</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fase3s.each do |fase3| %>
      <tr>
        <td><%= fase3.nome %></td>
        <td><button class="btn"><%= link_to 'Ver', fase3, class: 'link-to-text-color' %></button></td>
        <td><button class="btn"><%= link_to 'Editar', edit_fase3_path(fase3), class: 'link-to-text-color' %></button></td>
        <td><button class="btn"><%= link_to 'Excluir', fase3, class: 'link-to-text-color', method: :delete, data: { confirm: 'Tem certeza?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Terceira fase', new_fase3_path, class: 'link-to-text-color' %>
